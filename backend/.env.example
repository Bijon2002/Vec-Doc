# Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/vecdoc?schema=public"

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# File Storage (Local or S3)
STORAGE_TYPE=local
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# AWS S3 (Optional - for production)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=ap-south-1
# AWS_S3_BUCKET=vecdoc-uploads

# Firebase Cloud Messaging (for push notifications)
# FCM_SERVER_KEY=

# Google Cloud (for AI features)
# GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-cloud.json
# GOOGLE_PROJECT_ID=

# OpenAI (for RAG chatbot)
# OPENAI_API_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
